	<%- include('./partials/head') %>
<body>
	<% if(locals.userName != undefined){ %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado') %>
	<% } %>

	<!-- Product detail -->
	<div class="container products-wrapper">

		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= product.title %> </h2>
			<% if(locals.userName != undefined){ %> 
			<p class="product-detail-description">
				<form action="/product/id/<%= product.id %>/edit" method="POST">
					<button type="submit">Editar</button>
				</form>
				<form action="/product/destroy/<%= product.id %>" method="POST">
					<button type="submit">Borrar</button>
				</form>
			</p>
			<% } else{} %>
		</div>

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= product.image %>" alt="image" class="product-detail-img">
					<p class="product-detail-description"> <%= product.artistName %> </p>
				</article>

				<!-- Comentarios -->
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/profile">Nombre usuario: </a> </strong>
								Texto del comentario que escribi√≥ el usuario Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora doloribus enim aspernatur fugit corrupti suscipit sit dolore magnam, praesentium explicabo inventore molestias facilis labore. Fugit ipsa mollitia odit inventore consequuntur.</p>
							</div>
						</article>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
				<!-- /Comentarios -->
			</div>
		</div>

	</div>
	<!-- /product detail -->

	<%- include('./partials/footer') %>

</body>	
</html>