<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerDeslogueado') %>

	<div class="login-dark">
        <form action="/register/store" method="POST" enctype="multipart/form-data">
			<div class="form-group"><input class="form-control" type="username" name="userName" placeholder="Username"></div>
            <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Register</button></div>
		</form>

		<% if(locals.error){ %>
			<p class="error"><%= err.message %></p>
		<% } %>

    </div>

	<%- include('./partials/footer') %>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>	
</body>
</html>