	<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= locals.user.userName %>
						<a href="/profile/<%= locals.user.id %>/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
				</div>
				<div>
					<ul class="info-usuario">
						<li><%= locals.user.email %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Cat√°logo</h2>
			</div>

		<% for(let i=0; i<user.product.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= user.product[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= user.product[i].image %>" alt="Image">
						</figure>
						<article class="product-box_data">
							<h2><%= user.product[i].title %></h2>
							<p><%= user.product[i].artistName %></p>
						</article>
					</a>
				</section>
			</div>
		<% } %>
	</div>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
</body>
</html>