	<%- include('./partials/head') %>
<body>
	<% if(locals.user != undefined){ %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado') %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= data.userName %>
						<% if(locals.user.id == data.id){ %>
						<a href="/profile/<%= data.id %>/edit">
							<i class="fas fa-cog"></i>
						</a>
						<% } %>
					</h1>
				</div>
				<div>
					<ul class="info-usuario">
						<li><%= data.email %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Comentarios: <%= data.comentario.length %></h2>
			</div>

			<div class="col-12">
				<h2 class="products-title">Cat√°logo</h2>
			</div>

		<% for(let i=0; i<data.product.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= data.product[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= data.product[i].image %>" alt="Image">
						</figure>
						<article class="product-box_data">
							<h2><%= data.product[i].title %></h2>
							<p><%= data.product[i].artistName %></p>
						</article>
					</a>
				</section>
			</div>
		<% } %>
	</div>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
</body>
</html>