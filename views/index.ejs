	<%- include('./partials/head') %>
<body>
	<% if(locals.user != null){ %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado') %>
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="col-12">
			<h2 class="products-title">Recomendados</h2>
		</div>
		<!-- Mostrar productos -->
		<% for(let i=0; i<product.length; i++){ %>
				<div class="row">
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="product/id/<%= product[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= product[i].image %>" alt="<%= product[i].id %>">
								</figure>
								<article class="product-box_data">
									<h2> <%= product[i].title %> </h2>
									<p> <%= product[i].artistName %> </p>
								</article>
							</a>
						</section>
					</div>
				</div>
		<% } %>
		<!-- /Mostrar productos -->
	</div>
	<!-- /Novedades -->

	<%- include('./partials/footer') %>
</body>
</html>