	<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerDeslogueado') %>

	<!-- Banner -->
	<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin: 0 356px 0 356px;">
		<!-- Wrapper for slides -->
		  <div class="carousel-inner" style="border-radius: 25px;">
			<div class="item active">
			  <img src="/images/vinyls-3.png" alt="">
			</div>
		
			<div class="item">
			  <img src="/images/vinyls2.png" alt="">
			</div>
		</div>		
		<!-- Controls -->
		<a class="left carousel-control" href="#myCarousel" data-slide="prev" id="controls" style="background-image: none;">
		  <span class="glyphicon glyphicon-chevron-left"></span>
		  <span class="sr-only"> Previous </span>
		</a>
		<a class="right carousel-control" href="#myCarousel" data-slide="next" id="controls" style="background-image: none;">
		  <span class="glyphicon glyphicon-chevron-right"></span>
		  <span class="sr-only"> Next </span>
		</a>
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="col-12">
			<h2 class="products-title">Recomendados</h2>
		</div>
		<!-- Mostrar productos -->
		<% for(let i=0; i<product.length; i++){ %>
				<div class="row">
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="product/id/<%= product[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/tn-various-issues-va001.png" alt="<%= product[i].id %>">
								</figure>
								<article class="product-box_data">
									<h2> <%= product[i].title %> </h2>
									<p> <%= product[i].artistName %> </p>
								</article>
							</a>
						</section>
					</div>
				</div>
		<% } %>
		<!-- /Mostrar productos -->
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más populares</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product">
						<figure class="product-box_image">
							<img src="images/products/tn-psychonaut-unfold-the-god-man.png" alt="Vinilo 5">
						</figure>
						<article class="product-box_data">
							<h2>PSYCHONAUT</h2>
							<p>UNFOLD THE MAN</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product">
						<figure class="product-box_image">
							<img src="images/products/tn-officium-triste-the-death-of-gaia.png" alt="Vinilo 6">
						</figure>
						<article class="product-box_data">
							<h2>OFFICIUM TRISTE</h2>
							<p>THE DEATH OF GAIA</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product">
						<figure class="product-box_image">
							<img src="images/products/tn-the-texas-gentlemen-floor-it.png" alt="Vinilo 7">
						</figure>
						<article class="product-box_data">
							<h2>TEXAS GENTLEMEN</h2>
							<p>FLOOR IT!!!</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product">
						<figure class="product-box_image">
							<img src="images/products/tn-toshiaki-sakoda-devil-s-crush-alien-crush-soundtracks.png" alt="Vinilo 8">
						</figure>
						<article class="product-box_data">
							<h2>TOSHIAKI SAKODA</h2>
							<p>DEVIL'S CRUSH & ALIEN CRUSH SOUNDTRACKS</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
		</div>
	</div>
	<!-- /Más comentados -->


	<%- include('./partials/footer') %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>	
</html>