<!-- Header -->
<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/tlTextless.png">
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/search" method="GET" class="search-form">
					<input type="text" name="search" class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
				</form>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>

		<nav class="main-navbar">
			<ul class="left-navbar">
				<li><a href="/product/create" class="upgrade">Cargar vinilo</a></li>
			</ul>
			<ul class="right-navbar">
				<li><a class="upgrade" href="/profile/<%= locals.user.id %>"> <%= locals.user.userName %> <i class="fas fa-user"></i></a>
				</li>
				<li>
					<form action="/login/logout" method="post">
						<button type="submit" class="out">Logout</button>
					</form>
				</li>
			</ul>
		</nav>
	</div>

	<% if(locals.user.userName){ %>
		<h2 style="text-align: center; color: white;">Welcome, <%= locals.user.userName %></h2>
	<% } %>

</header>
<!-- /Header -->